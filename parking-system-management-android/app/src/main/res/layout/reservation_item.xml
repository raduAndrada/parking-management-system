<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/reservation_item_parking_name_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/parking_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/reservation_item_parking_level_number_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/parking_level"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="150dp"
        />

    <TextView
        android:id="@+id/reservation_item_parking_zone_letter_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/parking_zone"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="300dp"
    />

    <TextView
        android:id="@+id/reservation_item_parking_spot_number_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/parking_spot"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/reservation_item_start_time_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_time"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/reservation_item_end_time_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/end_time"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="150dp"
        />

    <TextView
        android:id="@+id/reservation_item_cost_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cost"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="300dp"
        />

    <TextView
        android:id="@+id/reservation_item_notes_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notes"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp" />

</RelativeLayout>